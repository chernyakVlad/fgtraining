<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE browse-hierarchy SYSTEM "dynamosystemresource:/atg/dtds/browse-hierarchy/browse-hierarchy_1.0.dtd">

<browse-hierarchy xml-combine="append" root="home">

    <!-- Adding Custom Browse to Home -->
    <browse-item id="home" xml-combine="append">
        <browse-item reference-id="library"/>
        <browse-item reference-id="address"/>
    </browse-item>

    <!-- The Library Home-->
    <browse-item id="library" label="Library" is-root="true" icon-resource="node.priceLists.iconSmall">
        <browse-item reference-id=" author"/>
        <browse-item reference-id="book"/>
    </browse-item>

    <!-- The Author -->
    <browse-item id="author" label="Authors" is-root="false" icon-resource="node.priceLists.iconSmall" show-count="true">
        <list-definition id="allauthor" retriever="query" child-type="/com/training/components/repository/PersonCVRepository:resume">
            <retriever-parameter name="query" value="ALL" />
        </list-definition>
    </browse-item>

    <!-- The Books -->
    <browse-item id="book" label="Books" is-root="false" icon-resource="node.priceLists.iconSmall" show-count="true">
        <list-definition id="allbook" retriever="query" child-type="/com/training/components/repository/PersonCVRepository:skill">
            <retriever-parameter name="query" value="ALL" />
        </list-definition>
    </browse-item>

    <!-- The Address -->
    <browse-item id="address" label="Address" is-root="true" icon-resource="node.priceLists.iconSmall">
        <list-definition id="alladdress" retriever="query" child-type="/com/training/components/repository/PersonCVRepository:person">
            <retriever-parameter name="query" value="ALL" />
        </list-definition>
    </browse-item>
</browse-hierarchy>